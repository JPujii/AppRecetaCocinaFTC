<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PasosActivity">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="40dp"
    android:layout_marginHorizontal="30dp">
    <TextView
        android:id="@+id/txtStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/btn_editar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/ic_edit"/>
    <Button
        android:id="@+id/btn_speech_pasos"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/ic_play_speech"/>
</FrameLayout>

    <EditText
        android:id="@+id/txtPaso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_weight="1"
        android:gravity="start"
        android:text="TextView"
        android:textSize="20sp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            android:clickable="true"/>

    </FrameLayout>

    <Button
        android:id="@+id/btn_actualizar_pasos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Actualizar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp">
        <Button
            android:id="@+id/btnBack"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/ic_arrow_back">
        </Button>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </FrameLayout>

        <Button
            android:id="@+id/btnNextStep"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/ic_arrow_next"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>
</LinearLayout>